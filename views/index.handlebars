<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>BURGER WORLD </h1>
            <div>
                <form action="/" method="POST">
                    <textarea type="text" name="burger_type"></textarea>

                    <button type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3> Burgers.</h3>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    <p>ID: {{this.id}}</p>
                    <p>burger: {{this.burger_name}}</p>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h3> Devoured Burgers</h3>
            <ul> {{#each burgers}}
                {{#if devoured}}
                <li>
                    <p>ID: {{this.id}}</p>
                    <p>Wish: {{this.burger_name}}</p>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>
</div>